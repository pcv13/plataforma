<h1>LIST</h1>
<table class="container" cellpandding="0" cellspacing="0" border="0">
  <thead>
    <tr>
      <th><h1>Estado</h1></th>
      <th><h1>Agency</h1></th>
      <th><h1>Tipo</h1></th>
      <th><h1>App</h1></th>
      <th><h1>Os</h1></th>
      <th><h1>Geo</h1></th>
      <th><h1>Price</h1></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td class="<%= offer.estado %>"><%= offer.estado %></td>
        <td class="<%= offer.estado %>"><%= offer.agency %></td>
        <td class="<%= offer.estado %>"><%= offer.tipo %></td>
        <td class="<%= offer.estado %>"><%= offer.app %></td>
        <td class="<%= offer.estado %>"><%= offer.os %></td>
        <td class="<%= offer.estado %>"><%= offer.geo %></td>
        <td class="<%= offer.estado %>"><%= offer.price %></td>
        <td class="<%= offer.estado %>"><div class="btn-group ">
          <input class="button aprobado" type="submit" onclick = "location='/offers/<%= offer.id %>/monetizado'" value="$" />
          <input class="button afiliado" type="submit" onclick = "location='/offers/<%= offer.id %>/afiliado'" value="@ " />
          <input class="button rechazado" type="submit" onclick = "location='/offers/<%= offer.id %>/stop'" value="" />
          <input class="button destroy" type="submit" onclick = "location='/offers/<%= offer.id %>/destruido'" value="D" />

        </div></td>

        <!-- <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Afliado', afiliate_offer_path(offer) %></td>
        <td><%= link_to 'Monetizado', monetized_offer_path(offer) %></td>
        <td><%= link_to 'Stop', stop_offer_path(offer) %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
