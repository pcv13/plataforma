<h1>LIST</h1>
<table class="container" cellpandding="0" cellspacing="0" border="0">
  <thead>
    <tr>
      <th><h1>Estado</h1></th>
      <th><h1>Agency</h1></th>
      <th><h1>Tipo</h1></th>
      <th><h1>App</h1></th>
      <th><h1>Os</h1></th>
      <th><h1>Geo</h1></th>
      <th><h1>Price</h1></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.estado %></td>
        <td><%= offer.agency %></td>
        <td><%= offer.tipo %></td>
        <td><%= offer.app %></td>
        <td><%= offer.os %></td>
        <td><%= offer.geo %></td>
        <td><%= offer.price %></td>

        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Afliado', afiliate_offer_path(offer) %></td>
        <td><%= link_to 'Monetizado', monetized_offer_path(offer) %></td>
        <td><%= link_to 'Stop', stop_offer_path(offer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
