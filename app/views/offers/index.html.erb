<h1>BOARD</h1>
<table class="container" cellpandding="0" cellspacing="0" border="0">
  <thead>
    <tr>
      <th><h1>Estado</h1></th>
      <th><h1>Agency</h1></th>
      <th><h1>Offer</h1></th>

      <th><h1>Price</h1></th>
      <th><h1>Geo</h1></th>
      <th><h1>Agencylink</h1></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.estado %></td>
        <td><%= offer.agency %></td>
        <td><%= offer.oferta_des %></td>
        <td><%= offer.price %></td>
        <td><%= offer.geo %></td>
        <td><%= offer.agencyLink %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Aprobado', approb_offer_path(offer) %></td>
        <td><%= link_to 'Rechazado', non_approb_offer_path(offer) %></td>
        <td><%= link_to 'Autorizado',authotized_offer_path(offer) %></td>
        <td><%= link_to 'No autorizado', non_authotized_offer_path(offer) %></td>
        <td><%= link_to 'Subido', upload_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center">
  <%= render 'form', offer: @offer %>

</div>
</div>
